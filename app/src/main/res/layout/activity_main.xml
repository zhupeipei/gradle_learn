            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorAccent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:onClick="webviewCrashFix"
