                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:onClick="testClick"
                android:text="代码测试" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorAccent" />
